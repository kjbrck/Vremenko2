@{
    ViewData["Title"] = "Vremenko";
}

<div class="text-center clearfix">
    @using web.Services.GetDataService;
    @foreach(WeatherStation station in GetDataService.ws){
        @if(station != null){
            <div class="square">
                @if(@station.Name.Equals("")){
                    <h4>@station.MeteoId</h4>
                }
                else{
                  <h4>@station.Name</h4>  
                }
                @if(station.Temp != null){
                    <h2>@station.Temp°C</h2>
                }
                else{
                    <h2>Ni podatka</h2>
                }
                @if(station.Hum != null){
                    <h7>Vlažnost: @station.Hum%</h7> 
                }
                else{
                    <h7>Ni podatka</h7>
                }
            </div>
             
        }
        else{
            break;
        }
    }
    
</div>

<style>
    .square{
        padding-left: 5px;
        padding-right: 5px;
        margin: 20px;
        width: 265px;
        height: 138px;
        float: left;
        top: 50%;
        border: 1px black solid;
        border-radius: 1px;
        background-color: #03ADAD;
        color: white;
        word-break: break-word;
    }

    .test{
        position: absolute;
        padding-left: 5px;
        padding-right: 5px;
        margin: 20px;
        width: 265px;
        height: 138px;
        float: left;
        top: 0px;
        left: 0px;
        border: 1px black solid;
        border-radius: 1px;
        background-color: #03ADAD;
        color: white;
        word-break: break-word;
        display: none;
        z-index: 1;
    }

    .square:hover + .square.test{
        display: inline-block;
    }

    h4{
        height: 57.6px;
    }

    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
